<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Backend Template - Whatson Web</title>
    <meta name="robots" content="noindex, nofollow">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>

    <![endif]-->

    {% stylesheets
    '@WHBackendTemplateBundle/Resources/public/plugins/bootstrap/css/bootstrap.min.css'
    '@WHBackendTemplateBundle/Resources/public/plugins/inspinia/css/style.css'
    '@WHBackendTemplateBundle/Resources/public/plugins/inspinia/css/plugins/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css'
    '@WHBackendTemplateBundle/Resources/public/plugins/inspinia/css/plugins/iCheck/custom.css'
    '@WHBackendTemplateBundle/Resources/public/plugins/backend-template/inspinia-overwrite.css'
    filter="cssrewrite" %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css"/>

    {% stylesheets
    filter="scssphp" %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}

    {# Ajouter des .css ou du css dans une vue #}
    {% block stylesheets %}{% endblock %}

</head>

<body class="fixed-nav pace-done skin-3">

<div id="wrapper">

    {% import '@WHBackendTemplate/Twig/macros.html.twig' as macros %}

    <header>

        <nav class="navbar-default navbar-static-side" role="navigation">
            <div class="sidebar-collapse">

                {{ render(controller('WHUserBundle:Backend/User:flapColumn')) }}

                {% set menuTemplate = '@WHBackendTemplate/Twig/menu.html.twig' %}

                {% if globalConfig.menus.main is defined %}

                    {% set menu = knp_menu_get('BackendBundle:Menu:' ~ globalConfig.menus.main) %}
                    {{ knp_menu_render(menu, {allow_safe_labels : true, template: menuTemplate}) | raw }}

                {% endif %}

            </div>

        </nav>

    </header>

    <div id="page-wrapper" class="gray-bg dashbard-1">

        <div class="row border-bottom">
            <nav class="navbar navbar-fixed-top" role="navigation">

                <div class="navbar-header">
                    <a class="navbar-minimalize minimalize-styl-2 btn btn-primary" href="#">
                        <i class="fa fa-bars"></i>
                    </a>
                </div>

                {% set menuTemplateTop = '@WHBackendTemplate/Twig/menu-top.html.twig' %}

                {% if globalConfig.menus.right is defined %}

                    {% set menu = knp_menu_get('BackendBundle:Menu:' ~ globalConfig.menus.right) %}
                    {{ knp_menu_render(menu, {allow_safe_labels : true, template: menuTemplateTop}) | raw }}

                {% endif %}

            </nav>
        </div>

        <div class="row wrapper border-bottom white-bg page-heading">
            {% block title %}{% endblock %}
            {% block breadcrumb %}{% endblock %}
        </div>

        <div class="wrapper wrapper-content animated fadeInRight">
            {% block body %}{% endblock %}
        </div>

    </div>

    <div class="modal fade" id="modalAjax" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content"></div>
        </div>
    </div>

</div>

{% javascripts
'@WHBackendTemplateBundle/Resources/public/plugins/jquery/js/jquery.min.js' %}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}

<script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.full.min.js"></script>

{% javascripts
'@WHBackendTemplateBundle/Resources/public/plugins/jquery-ui/js/jquery-ui.min.js'
'@WHBackendTemplateBundle/Resources/public/plugins/inspinia/js/inspinia.js'
'@WHBackendTemplateBundle/Resources/public/plugins/inspinia/js/plugins/iCheck/icheck.min.js'
'@WHBackendTemplateBundle/Resources/public/plugins/inspinia/js/plugins/metisMenu/jquery.metisMenu.js'
'@WHBackendTemplateBundle/Resources/public/plugins/inspinia/js/plugins/pace/pace.min.js'
'@WHBackendTemplateBundle/Resources/public/plugins/inspinia/js/plugins/slimscroll/jquery.slimscroll.min.js'
'@WHBackendTemplateBundle/Resources/public/plugins/bootstrap/js/bootstrap.min.js'
'@WHBackendTemplateBundle/Resources/public/plugins/backend-template/js/layout.js' %}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}

{{ elfinder_tinymce_init4('tinymce') }}
{{ tinymce_init() }}

{# Ajouter des .js dans une vue #}
{% block javascripts %}{% endblock %}

{# Ajouter du js dans une vue #}
{% block javascript %}{% endblock %}

</body>
</html>