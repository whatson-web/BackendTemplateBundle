<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Backend Template - Whatson Web</title>
    <meta name="robots" content="noindex, nofollow">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>

    <![endif]-->

    {% stylesheets
    '@WHBackendTemplateBundle/Resources/public/plugins/material/css/jquery.mCustomScrollbar.min.css'
    '@WHBackendTemplateBundle/Resources/public/plugins/material/css/animate.min.css'
    '@WHBackendTemplateBundle/Resources/public/plugins/material/css/app_1.min.css'
    '@WHBackendTemplateBundle/Resources/public/plugins/material/css/app_2.min.css'
    '@WHBackendTemplateBundle/Resources/public/plugins/backend-template/layout.css'
    filter="cssrewrite" %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css"/>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css">

    {% stylesheets
    filter="scssphp" %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}

    {# Ajouter des .css ou du css dans une vue #}
    {% block stylesheets %}{% endblock %}

</head>

<body>

{% import '@WHBackendTemplate/Twig/macros.html.twig' as macros %}

<header id="header" class="clearfix" data-ma-theme="blue">

    <ul class="h-inner">

        <li class="hi-trigger ma-trigger" data-ma-action="sidebar-open" data-ma-target="#sidebar">
            <div class="line-wrap">
                <div class="line top"></div>
                <div class="line center"></div>
                <div class="line bottom"></div>
            </div>
        </li>

        <li class="hi-logo hidden-xs">
            <span>{{ project_name }}</span>
        </li>

    </ul>

</header>

<section id="main">

    {% block breadcrumb %}{% endblock %}

    <aside id="sidebar" class="sidebar c-overflow">

        <div class="s-profile">

            {{ render(controller('WHUserBundle:Backend/User:flapColumn')) }}

            {% set menuTemplateTop = '@WHBackendTemplate/Twig/menu-top.html.twig' %}

            {% if globalConfig.menus.right is defined %}

                {% set menu = knp_menu_get('BackendBundle:Menu:' ~ globalConfig.menus.right) %}
                {{ knp_menu_render(menu, {allow_safe_labels : true, template: menuTemplateTop}) | raw }}

            {% endif %}

        </div>

        {% set menuTemplate = '@WHBackendTemplate/Twig/menu.html.twig' %}

        {% if globalConfig.menus.main is defined %}

            {% set menu = knp_menu_get('BackendBundle:Menu:' ~ globalConfig.menus.main) %}
            {{ knp_menu_render(menu, {allow_safe_labels : true, template: menuTemplate}) | raw }}

        {% endif %}

    </aside>

    <section id="content">

        <div class="container">

            <div class="block-header">
                {% block title %}{% endblock %}
            </div>

            {% block body %}{% endblock %}

        </div>

    </section>

</section>

<div class="modal fade" id="modalAjax" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content"></div>
    </div>
</div>

{% javascripts
'@WHBackendTemplateBundle/Resources/public/plugins/jquery/js/jquery.min.js' %}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}

<script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.full.min.js"></script>

{% javascripts
'@WHBackendTemplateBundle/Resources/public/plugins/bootstrap/js/bootstrap.min.js'
'@WHBackendTemplateBundle/Resources/public/plugins/material/js/jquery.mCustomScrollbar.concat.min.js'
'@WHBackendTemplateBundle/Resources/public/plugins/material/js/app.min.js'
'@WHBackendTemplateBundle/Resources/public/plugins/material/js/waves.min.js'
'@WHBackendTemplateBundle/Resources/public/plugins/backend-template/js/layout.js' %}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}

{{ elfinder_tinymce_init4('tinymce') }}
{{ tinymce_init() }}

{# Ajouter des .js dans une vue #}
{% block javascripts %}{% endblock %}

{# Ajouter du js dans une vue #}
{% block javascript %}{% endblock %}

</body>
</html>