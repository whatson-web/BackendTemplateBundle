<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Backend Template - Whatson Web</title>
    <meta name="robots" content="noindex, nofollow">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>

    <![endif]-->

    {% stylesheets
    '@WHBackendTemplateBundle/Resources/public/plugins/bootstrap/css/bootstrap.min.css'
    filter="cssrewrite" %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css"/>

    {% stylesheets
    '@WHBackendTemplateBundle/Resources/public/plugins/backend-template/css/layout.scss'
    filter="scssphp" %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}

    {# Ajouter des .css ou du css dans une vue #}
    {% block stylesheets %}{% endblock %}

</head>

<body>

{% import '@WHBackendTemplate/Twig/macros.html.twig' as macros %}

<header>

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                        data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Brand</a>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                {% set menuTemplate = '@WHBackendTemplate/Twig/menu.html.twig' %}

                {% if globalConfig.menus.main is defined %}

                    {% set menuOptions = {'menuSlug' : globalConfig.menus.main} %}
                    {% set menu = knp_menu_get('WHSuperAdminBundle:Tree:menu', [], menuOptions) %}
                    {{ knp_menu_render(menu, {allow_safe_labels : true, template: menuTemplate}) | raw }}

                {% endif %}

                {% if globalConfig.menus.right is defined %}

                    {% set menuOptions = {'menuSlug' : globalConfig.menus.right} %}
                    {% set menu = knp_menu_get('WHSuperAdminBundle:Tree:menu', [], menuOptions) %}
                    {{ knp_menu_render(menu, {allow_safe_labels : true, template: menuTemplate}) | raw }}

                {% endif %}

            </div>
        </div>
    </nav>

</header>

<div id="wrapper">
    <div class="container">
        {% block breadcrumb %}{% endblock %}
        {% block title %}{% endblock %}
        {% block body %}{% endblock %}
    </div>
</div>

<div class="modal fade" id="modalAjax" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content"></div>
    </div>
</div>

{% javascripts
'@WHBackendTemplateBundle/Resources/public/plugins/jquery/js/jquery.min.js'
'@WHBackendTemplateBundle/Resources/public/plugins/jquery-ui/js/jquery-ui.min.js'
'@WHBackendTemplateBundle/Resources/public/plugins/bootstrap/js/bootstrap.min.js'
'@WHBackendTemplateBundle/Resources/public/plugins/backend-template/js/layout.js'
'@WHAmazonS3MediaBundle/Resources/public/js/finder.js' %}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}

{{ tinymce_init() }}

{# Ajouter des .js dans une vue #}
{% block javascripts %}{% endblock %}

{# Ajouter du js dans une vue #}
{% block javascript %}{% endblock %}

</body>
</html>